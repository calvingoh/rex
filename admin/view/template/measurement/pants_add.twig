{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-admin" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>

      
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-measurement" class="form-horizontal">

            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-length">{{ entry_length }}</label>
                <div class="col-sm-1">
                  <input type="text" name="length" value="{{ length }}" placeholder="{{ entry_length }}" id="input-length" class="form-control" />
                  {% if error_length %}
                  <div class="text-danger">{{ error_length }}</div>
                  {% endif %}
                </div>
              </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-bottom">{{ entry_bottom }}</label>
            <div class="col-sm-1">
              <input type="text" name="bottom" value="{{ bottom }}" placeholder="{{ entry_bottom}}" id="input-bottom" class="form-control" />
              {% if error_bottom %}
              <div class="text-danger">{{ error_bottom}}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-waist">{{ entry_waist }}</label>
            <div class="col-sm-1">
                <input type="text" name="waist" value="{{ waist }}" placeholder="{{ entry_waist}}" id="input-waist" class="form-control" />
              {% if error_waist %}
              <div class="text-danger">{{ error_waist }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-hip">{{ entry_hip}}</label>
            <div class="col-sm-1">
                <input type="text" name="hip" value="{{ hip }}" placeholder="{{ entry_hip }}" id="input-hip" class="form-control" />
              {% if error_hip %}
              <div class="text-danger">{{ error_hip }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-crotch">{{ entry_crotch}}</label>
            <div class="col-sm-1">
                <input type="text" name="crotch" value="{{ crotch }}" placeholder="{{ entry_crotch }}" id="input-crotch" class="form-control" />
              {% if error_crotch %}
              <div class="text-danger">{{ error_crotch}}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-leg">{{ entry_leg}}</label>
            <div class="col-sm-1">
                <input type="text" name="leg" value="{{ leg }}" placeholder="{{ entry_leg }}" id="input-leg" class="form-control" />
              {% if error_leg %}
              <div class="text-danger">{{ error_leg}}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-knee">{{ entry_knee }}</label>
            <div class="col-sm-1">
                <input type="text" name="knee" value="{{ knee }}" placeholder="{{ entry_knee }}" id="input-knee" class="form-control" />
              {% if error_knee %}
              <div class="text-danger">{{ error_knee}}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-1">
                <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="0">{{ text_disabled }}</option>
                <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                <option value="0" selected="selected">{{ text_disabled }}</option>
                <option value="1">{{ text_enabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          
          </div>
        </form>
      </div>
    </div>
  </div>
 
