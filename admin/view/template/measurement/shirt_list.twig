{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-admin').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-admin">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <td style="width: 5px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{% if sort == 'length' %}<a href="{{ sort_length }}" class="{{ order|lower }}">{{ column_length }}</a> {% else %}<a href="{{ sort_length }}">{{ column_length }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'shoulder' %}<a href="{{ sort_shoulder}}" class="{{ order|lower }}">{{ column_shoulder}}</a>{% else %}<a href="{{ sort_shoulder }}">{{ column_shoulder }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'cuff_h' %}<a href="{{ sort_cuff_h }}" class="{{ order|lower }}">{{ column_cuff_h}}</a>{% else %}<a href="{{ sort_cuff_h }}">{{ column_cuff_h }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'cuff_o' %}<a href="{{ sort_cuff_o }}" class="{{ order|lower }}">{{ column_cuff_o }}</a>{% else %}<a href="{{ sort_cuff_o }}">{{ column_cuff_o }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'chest_f' %}<a href="{{ sort_chest_f }}" class="{{ order|lower }}">{{ column_chest_f }}</a>{% else %}<a href="{{ sort_chest_f}}">{{ column_chest_f}}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'chest_b' %}<a href="{{ sort_chest_b}}" class="{{ order|lower }}">{{ column_chest_b }}</a>{% else %}<a href="{{ sort_chest_b}}">{{ column_chest_b}}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'hip' %}<a href="{{ hip }}" class="{{ order|lower }}">{{ column_hip }}</a>{% else %}<a href="{{ sort_hip }}">{{ column_hip }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'collar' %}<a href="{{ sort_collar }}" class="{{ order|lower }}">{{ column_collar }}</a>{% else %}<a href="{{ sort_collar }}">{{ column_collar }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'status' %}<a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>{% else %}<a href="{{ sort_status }}">{{ column_status }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'date_added' %}<a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>{% else %}<a href="{{ sort_date_added }}">{{ column_date_added }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'date_modified' %}<a href="{{ sort_date_modified }}" class="{{ order|lower }}">{{ column_date_modified }}</a>{% else %}<a href="{{ sort_date_modified }}">{{ column_date_modified }}</a>{% endif %}</td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
              {% if shirts %}
              {% for shirt in shirts %}
              <tr>
                <td class="text-center">{% if shirt.shirt_id in selected %}
                  <input type="checkbox" name="selected[]" value="{{ shirt.shirt_id }}" checked="checked" />
                  {% else %}
                  <input type="checkbox" name="selected[]" value="{{ shirt.shirt_id }}" />
                  {% endif %}</td>
                <td class="text-left">{{ shirt.length }}</td>
                <td class="text-left">{{ shirt.shoulder }}</td>
                <td class="text-left">{{ shirt.cuff_h}}</td>
                <td class="text-left">{{ shirt.cuff_o }}</td>
                <td class="text-left">{{ shirt.chest_f }}</td>
                <td class="text-left">{{ shirt.chest_b }}</td>
                <td class="text-left">{{ shirt.hip }}</td>
                <td class="text-left">{{ shirt.collar }}</td>
                <td class="text-left">{{ shirt.status }}</td>
                <td class="text-left">{{ shirt.date_added }}</td>
                <td class="text-left">{{ shirt.date_modified }}</td>
                <td class="text-right">
                  <div class="btn-group" style="min-width: 65px;">
                    <a href="{{ shirt.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                    <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <li class="dropdown-header">{{ text_option }}</li>
                      {% if shirt.unlock %}
                      <li><a href="{{ shirt.unlock }}"><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                      {% else %}
                      <li class="disabled"><a><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                      {% endif %}
                      <li role="separator" class="divider"></li>
                      <li class="dropdown-header">{{ text_login }}</li>
                      {% for store in shirt.store %}
                      <li><a href="{{ store.href }}" target="_blank"><i class="fa fa-lock"></i> {{ store.name }}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
                </td>
              </tr>
              {% endfor %}
              {% else %}
              <tr>
                <td class="text-center" colspan="13">{{ text_no_results }}</td>
              </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 
