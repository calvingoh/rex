{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-admin').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-admin">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <td style="width: 5px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{% if sort == 'length' %}<a href="{{ sort_length }}" class="{{ order|lower }}">{{ column_length }}</a> {% else %}<a href="{{ sort_length }}">{{ column_length }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'bottom' %}<a href="{{ sort_bottom }}" class="{{ order|lower }}">{{ column_bottom }}</a>{% else %}<a href="{{ sort_bottom }}">{{ column_bottom }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'waist' %}<a href="{{ sort_waist }}" class="{{ order|lower }}">{{ column_waist }}</a>{% else %}<a href="{{ sort_pwaist}}">{{ column_waist }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'hip' %}<a href="{{ hip }}" class="{{ order|lower }}">{{ column_hip }}</a>{% else %}<a href="{{ sort_hip }}">{{ column_hip }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'crotch' %}<a href="{{ sort_crotch }}" class="{{ order|lower }}">{{ column_crotch }}</a>{% else %}<a href="{{ sort_crotch }}">{{ column_crotch }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'leg' %}<a href="{{ sort_leg }}" class="{{ order|lower }}">{{ column_leg }}</a>{% else %}<a href="{{ sort_leg}}">{{ column_leg}}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'knee' %}<a href="{{ sort_knee }}" class="{{ order|lower }}">{{ column_knee }}</a>{% else %}<a href="{{ sort_knee }}">{{ column_knee}}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'status' %}<a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>{% else %}<a href="{{ sort_status }}">{{ column_status }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'date_added' %}<a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>{% else %}<a href="{{ sort_date_added }}">{{ column_date_added }}</a>{% endif %}</td>
                  <td class="text-left">{% if sort == 'date_modified' %}<a href="{{ sort_date_modified }}" class="{{ order|lower }}">{{ column_date_modified }}</a>{% else %}<a href="{{ sort_date_modified }}">{{ column_date_modified }}</a>{% endif %}</td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
              {% if pantss %}
              {% for pants in pantss %}
              <tr>
                <td class="text-center">{% if pants.pants_id in selected %}
                  <input type="checkbox" name="selected[]" value="{{ pants.pants_id }}" checked="checked" />
                  {% else %}
                  <input type="checkbox" name="selected[]" value="{{ pants.pants_id }}" />
                  {% endif %}</td>
                <td class="text-left">{{ pants.length }}</td>
                <td class="text-left">{{ pants.bottom }}</td>
                <td class="text-left">{{ pants.waist}}</td>
                <td class="text-left">{{ pants.hip }}</td>
                <td class="text-left">{{ pants.crotch }}</td>
                <td class="text-left">{{ pants.leg }}</td>
                <td class="text-left">{{ pants.knee }}</td>
                <td class="text-left">{{ pants.status }}</td>
                <td class="text-left">{{ pants.date_added }}</td>
                <td class="text-left">{{ pants.date_modified }}</td>
                <td class="text-right">
                  <div class="btn-group" style="min-width: 65px;">
                    <a href="{{ pants.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                    <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <li class="dropdown-header">{{ text_option }}</li>
                      {% if pants.unlock %}
                      <li><a href="{{ pants.unlock }}"><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                      {% else %}
                      <li class="disabled"><a><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                      {% endif %}
                      <li role="separator" class="divider"></li>
                      <li class="dropdown-header">{{ text_login }}</li>
                      {% for store in pants.store %}
                      <li><a href="{{ store.href }}" target="_blank"><i class="fa fa-lock"></i> {{ store.name }}</a></li>
                      {% endfor %}
                    </ul>
                  </div>
                </td>
              </tr>
              {% endfor %}
              {% else %}
              <tr>
                <td class="text-center" colspan="12">{{ text_no_results }}</td>
              </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 
